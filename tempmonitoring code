#include <DHT.h>
#include <DHT_U.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27,20,4);

//pin setup

#define DHTPIN 7 
#define DHTTYPE DHT22
DHT dht(DHTPIN , DHTTYPE);


void setup() {
  //initialize the lcd screen
  lcd.init();
  lcd.backlight();

  //initialze the sensor
  dht.begin();
  Serial.begin(9600);
  delay(500);
  Serial.println("Humidity and Temperature Sensor\n\n");
  delay(1000);

}

void loop() {
  float h = dht.readHumidity();
  float t = dht.readTemperature();

  if(isnan(h) || isnan(t)){
    Serial.println("Failed to read from temperature sensor");
    return;
  }

  Serial.print("Current humidity= ");
  Serial.print(h);
  Serial.println("% ");

  lcd.setCursor(0, 0);
  lcd.print("hum= ");
  lcd.print(h);
  lcd.print("%");

  Serial.print("Temperature= ");
  Serial.print(t);
  Serial.print("\xC2\xB0");
  Serial.println("C ");

  lcd.setCursor(0,1);
  lcd.print("Temp= ");
  lcd.print(t);
  lcd.print((char)223);
  lcd.print("C");

  delay(5000);

}
